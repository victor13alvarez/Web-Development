<%- include("./partials/header");%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">

  <div class="form-floating  mb-3"">
    <input class="form-control" id="postTitle" type="text" name="postTitle" placeholder="Post Title!" required>
    <label for="postTitle">Post title</label>
  </div>

  <div class="form-floating  mb-3"">
    <textarea class="form-control" id="postContent" type="text" name="postContent" placeholder="Post Content!" required style="height: 10rem"></textarea>
    <label for="postContent">Post content</label>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("./partials/footer");%>
